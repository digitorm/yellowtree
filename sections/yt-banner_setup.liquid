{% render 'yt_banner_setup_css', section: section %}

<section id="banner_{{section.id}}" class="banner_container">
    <div class="image-above_slider_background">
      <div class="image-container_above">
        {% render 'yt-image-size', image: section.settings.image_background_desktop %}
      </div>
    </div>
    <div class="image-wrapper slider-setup">
        <div class="image-container desktop">
          <div class="swiper banner-slider-desktop banner-slider-trigger">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              {% if block.type == "image_sliders" %}
              <div class="swiper-slide">
                <div class="image-swp">
                  {% render 'yt-image-size', image: block.settings.image_background_desktop %}
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>
            {% comment %}
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            {% endcomment %}
          </div>
        </div>
        <div class="image-container mobile" style="display: none;">
          <div class="swiper banner-slider-mobile banner-slider-trigger">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              {% if block.type == "image_sliders" %}
              <div class="swiper-slide">
                <div class="image-swp">
                  {% render 'yt-image-size', image: block.settings.image_background_mobile %}
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>
            {% comment %}
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            {% endcomment %}
          </div>
        </div>
    </div>
    <div class="{% if section.settings.enable_full_width %} container-fluid {% else %}container {% endif %}">
        <div class="row">
            <div class="col-md-12 section_width">
                <div class="inner-content text-content">
                    {% if section.settings.image_setup_mobile != blank  %}
                    <div class="image-container-on-content" style="display: none;">
                        {% render 'yt-image-size', image: section.settings.image_setup_mobile %}
                    </div>
                    {% endif %}
                    <h1>
                        {{section.settings.heading_text}}
                    </h1>
                    <h3>
                      {{section.settings.sub_heading_text}}
                    </h3>
                    {{ section.settings.custom_text }}
                    <ul class="list-setup">
                        {% for block in section.blocks %}
                      	{% if block.type == "list_setup" %}
                          <li> 
                              {% render 'yt_landing_check_icon'%}
                              <p>{{block.settings.list_text}}</p>
                          </li>
                      	{% endif %}
                        {% endfor %}
                    </ul>
					{% render 'btn-landing-page', url: section.settings.button_url, text: section.settings.button_text %}
                </div>
            </div>
        </div>
    </div>
</section>

<section id="banner_container_list_mob_{{section.id}}" class="banner_container_list_mob "  style="display: none;">
    <div class="container">
        <div class="row">
          <div class="col-md-12 section_width">
            <div class="inner-content text-content">
            <ul class="list-setup">
              {% for block in section.blocks %}
              {% if block.type == "list_setup" %}
                <li> 
                  {% render 'yt_landing_check_icon'%}
                  <p>{{block.settings.list_text}}</p>
                </li>
              {% endif%}
              {% endfor %}
            </ul>
            </div>
          </div>
        </div>
        </div>
</section>

<script type="lazyload2" defer>
  document.addEventListener("DOMContentLoaded", function(event) {
    var swiper = new Swiper(".banner-slider-trigger", {
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      loop: true,
      autoplay: {
        delay: 7000,
        disableOnInteraction: false,
      },
      effect: "fade",
      breakpoints: {
        320: {
          effect: "fade",
        },
      },
    });
  });
</script>

