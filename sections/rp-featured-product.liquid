{% include 'spurit_po2_section_snippet', product: all_products[section.settings.selected_product], products: null %}
<diV id="featured-product"></diV>
{%- liquid
  assign product = section.settings.selected_product
-%}

{%- capture Content -%}
{% if product != blank %}
  {%- render 'product-section', product: product -%}
{% else %}
  {% render 'onboarding-featured-product' %}
{% endif %}
{%- endcapture -%}


{% render 'section-body',
  content: Content,
  color_scheme: section.settings.color_scheme
%}

{% style %}
  #shopify-section-{{ section.id }} .shopify-payment-button__more-options {
    display: none;
  }
  .short-desc {
    font-size: 13px;
    font-weight: bold;
  }
  .special-desc {
    font-size: 16px;
    font-weight: 400;
    text-align: left;
    border-top: 2px solid #ccc;
    margin-top: 20px;
    padding-top: 10px;
    color: rgba(var(--color-text),1);
  }
  .bundle-info {
    color: #232323;
    margin: 0;
    font-size: 16px;
    font-weight: 400;
  }
  #shopify-section-{{ section.id }} .\#product-meta-inner {
    padding: 8rem 9.5rem;
  }
  #shopify-section-{{ section.id }} .\#product-meta-custom-image img {
    max-width: 436px;
    width: 100%;
  }
  
  #shopify-section-{{ section.id }} .\#grid > .slider-images-col {
    {% if section.settings.image_with_text_image != blank %}
      background-color: #f2f2ec;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .\#grid.\@strict .\#column.\@span\:7 {
    grid-column: span 6;
  }
  #shopify-section-{{ section.id }} .custom-prod-image-wrapper img {
    display: block;
    margin: 0 auto;
  }
  #shopify-section-{{ section.id }} .\#button {
    padding: 8.5px 60px;
  }
  #shopify-section-{{ section.id }} .shopify-payment-button__button.shopify-payment-button__button--branded > .shopify-cleanslate > [role="button"] {
    padding: 0 !important;
    min-height: 30px !important;
    max-height: 35px !important;
    margin-top: 0.5rem;
  }
  #shopify-section-{{ section.id }} .\#button.\@color\:default {
    --background-color: rgba(var(--color-accent), 1);
    --text-color: rgba(var(--color-accent-c), 1);
  }
  @media screen and (max-width: 1600px){
    #shopify-section-{{ section.id }} .\#product-meta-inner {
      padding: 3rem 4.5rem;
    }
    #shopify-section-{{ section.id }} .custom-prod-image-wrapper img {
      width: 100%;
      height: auto;
    }
  }
  @media screen and (max-width: 991px){
    #shopify-section-{{ section.id }} .\#grid.\@strict .\#column.\@span\:7 {
      grid-column: span 12;
    }
    #shopify-section-{{ section.id }} .\#product-meta-inner {
        padding-top: 0 !important;
    }
    #shopify-section-{{ section.id }} .\#product-gallery {
      padding-bottom: 0 !important;
    }

  }
  @media screen and (max-width: 767px){
    #shopify-section-{{ section.id }} .\#product-meta-inner {
      padding: 2rem 1.7rem;
    }
    #shopify-section-{{ section.id }} .\#product-meta-block.\@type\:title {
      margin-bottom: -1rem !important;
    }
  }
  @media screen and (max-width: 640px){
    #shopify-section-{{ section.id }} .\#product-price .\#price-item.\@on-sale {
      font-size: unset;
    }
    #shopify-section-{{ section.id }} .\#product-price,
     #shopify-section-{{ section.id }} .\#price-value.reg-value{
      font-size: 1.4em;
    }
  }
   @media screen and (max-width: 440px){
    #shopify-section-{{ section.id }} .\#product-price,
     #shopify-section-{{ section.id }} .\#price-value.reg-value{
      font-size: 1.3em;
    }
  }
  
  {% if section.settings.image_with_text_image != blank %}
  #shopify-section-{{ section.id }} .slider-images-col {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  {% endif %}}
  
 
  
{% endstyle %}

