
{% assign input = section.settings %}

<style>
  #shopify-section-{{section.id}} .affirm_section {
    background-color: {{ input.sec_section_bg }};
    padding-top: {{ input.lp_section_padd_top }};
    padding-right: {{ input.lp_section_padd_right }};
    padding-bottom: {{input.lp_section_padd_bottom }};
    padding-left: {{ input.lp_section_padd_left }};
  }
  #shopify-section-{{section.id}} .description{
    color: {{ input.affirm_text_color }};
    color: #000;
  }
  #shopify-section-{{section.id}} .affirm-col {
    flex-flow: row wrap;
    padding: 0 10px !important;
  }
  #shopify-section-{{section.id}} .affirm-col a {
    text-decoration: unset;
  }
  #shopify-section-{{section.id}} img.affirm-icon.mr-3 {
    max-height: 80px;
    width: auto;
  }
  #shopify-section-{{section.id}} .row.align-items-center.justify-content-center {
    max-width: 500px;
    margin: 0 auto 40px;
  }
  #shopify-section-{{section.id}} .heading {
    margin-bottom: 30px;
  }

  #shopify-section-{{section.id}} h3.heading_text {
    margin-bottom: 10px;
    font-size: 20px;
    color: #000;
    border-bottom: unset;
    text-align: center;
  }
  #shopify-section-{{section.id}} .heading .content {
    text-align: center;
  }
  
  #shopify-section-{{section.id}} .container {
    max-width: 800px;
  }
  #shopify-section-{{section.id}} .heading h3 {
    text-align: center;
    font-size: 35px;
    line-height: 1;
    margin-bottom: 30px;
    font-weight: 600;
  }
  @media screen and (max-width:991px){
    #shopify-section-{{section.id}} .affirm-col {
      flex-direction: column;
      text-align: center;
    }
  }
  @media screen and (max-width:767px){
    #shopify-section-{{section.id}} .affirm-col {
      flex-wrap: wrap;
    }
    #shopify-section-{{section.id}} .affirm-col .description.text-left {
      width: 100%;
      text-align: center !important;
    }
    #shopify-section-{{section.id}} .affirm-icon {
      margin: 0 0 5px !important;
    }
  }
  @media screen and (max-width:575px){
    #shopify-section-{{section.id}} .affirm_section > div > .row {
      row-gap: 0rem;
    }
    #shopify-section-{{section.id}} .affirm_section {
      padding: 40px 20px;
    }
    #shopify-section-{{section.id}} img.affirm-icon.mr-3 {
      max-height: 80px;
      margin-bottom: 0px;
    }
    #shopify-section-{{section.id}} .heading h3{
      font-size: 25px;
    }
    #shopify-section-{{section.id}} .btn-container {
      width: 100%;
      padding: 0;
    }
    #shopify-section-{{section.id}} .btn-container a.btn-landing2.btn {
        max-width: 100%;
        margin-top: 0;
    }
    #shopify-section-{{section.id}} .affirm_section .affirm-col {
      padding: 0;
      max-width: 33%;
    }
  }
  @media screen and (max-width:440px){

    #shopify-section-{{section.id}} .affirm_section > div > .row {
      row-gap: 1rem;
      margin: 0 auto 25px;
    }
  }
</style>


{% if input.display_section == true %}
<div class="affirm_section">
	<div class="container">
		<div class="row align-items-center justify-content-center">
          {% for block in section.blocks %}
            {% assign block_input = block.settings %}

            <div class="affirm-col col d-flex align-items-center justify-content-center">
                {% render 'yt-image-size', image: block_input.image , class: "affirm-icon mr-3" %}

                <div class="inner-content w-100">
                    {% if block_input.step != blank  %}
                    <h3 class="heading_text">
                        {{block_input.step}}
                    </h3>
                    {% endif %}   
                    {% if block_input.content != blank %}
                    <div class="content-text text-center">
                        {{block_input.content}}
                    </div>
                    {% endif %}
                </div>

            </div>
          {% endfor %}
		</div>
    <div class="row">
      <div class="heading">
        <h3> {{input.heading}} </h3>
        <div class="content">
            {{ input.content }}
        </div>
      </div>
    </div>
    <div class="row btn_url_cont">
      <div class="btn-container">
        {% render 'yt2-btn-landing-page', url: input.btn_url, text: input.btn_text %}
      </div>
    </div>
	</div>
</div>
{% endif %}


{% schema %}
{
	"name": "YT Video Section",
	"class": "yt2-video-section",
	"settings": [
      {
          "type":"checkbox",
          "id":"display_section",
          "label":"Display Section?",
          "default": true
      },
      {
        "type": "text",
        "id": "heading",
        "label":"Heading"
      },
      {
        "type": "textarea",
        "id": "content",
        "label":"Content"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type":"color",
        "id":"sec_section_bg",
        "label":"Background Color",
        "default": "#fff"
      },
      {
        "type":"color",
        "id":"affirm_text_color",
        "label":"Text Color",
        "default": "#fff"
      },
      {
        "type": "header",
        "content": "Section Paddings"
      },
      {
          "type":"text",
          "id":"lp_section_padd_top",
          "label":"Top",
          "default": "100px"
      },
      {
          "type":"text",
          "id":"lp_section_padd_right",
          "label":"Right",
          "default": "20px"
      },
      {
          "type":"text",
          "id":"lp_section_padd_bottom",
          "label":"Bottom",
          "default": "100px"
      },
      {
          "type":"text",
          "id":"lp_section_padd_left",
          "label":"Left",
          "default": "20px"
      },
      {
          "type":"header",
          "content":"Button"
      },
      {
          "type":"url",
          "id":"btn_url",
          "label":"Button Url"
      },
      {
          "type":"text",
          "id":"btn_text",
          "label":"Button Text"
      }
	],
	"blocks": [
      {
          "type": "steps",
          "name": "Steps",
          "settings": [
            {
              "type": "header",
              "content": "Content"
            },
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
                "type": "textarea",
                "id": "step",
                "label": "Step"
            },
            {
                "type": "textarea",
                "id": "content",
                "label": "Content"
            }
          ]
      }
	],
	"presets":[
      {
        "name":"YT2 Video Section",
        "category":"Custom Section"
      }
	]
}
{% endschema %}